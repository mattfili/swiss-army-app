.align-spaced.grid-block
		masonry(load-image="false").grid-content
			.masonry-brick(ng-repeat="topNews in nCtrl.hackerNews.news")
				.custom-card
					.custom-card-divider
						a#icon(ng-click="nCtrl.favorite(topNews)" ng-class="{true: 'visited', false: ''}[isActive]")
							i.fi-social-hacker-news
						a#link(href="{{topNews.url}}" target="_blank"){{topNews.title}}
					.custom-card-section
						.score Release: {{topNews.score}}
						.date Score: {{topNews.time | Time}}
			
			.masonry-brick(ng-repeat="topAsk in nCtrl.hackerNews.ask")
				.custom-card
					.custom-card-divider
						a#icon(ng-click="nCtrl.favorite(topAsk)" ng-class="{true: 'visited', false: ''}[isActive]")
							i.fi-social-hacker-news
						a#link(href="{{topAsk.url}}" target="_blank"){{topAsk.title}}
					.custom-card-section
						.date Release: {{topAsk.time | Time}}
						.score Score: {{topAsk.score}}

			
			.masonry-brick(ng-repeat="topShow in nCtrl.hackerNews.show")
