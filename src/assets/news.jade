						a#icon(ng-click="nCtrl.favorite(topShow)" ng-class="{true: 'visited', false: ''}[isActive]")
							i.fi-social-hacker-news
						a#link(href="{{topShow.url}}" target="_blank"){{topShow.title}}
					.custom-card-section
						.score Release: {{topShow.score}}
						.date Score: {{topShow.time | Time}}
